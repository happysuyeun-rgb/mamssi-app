{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@routes/*": ["src/routes/*"],
      "@pages/*": ["src/pages/*"],
      "@components/*": ["src/components/*"],
      "@store/*": ["src/store/*"],
      "@constants/*": ["src/constants/*"],
      "@utils/*": ["src/utils/*"],
      "@styles/*": ["src/styles/*"],
      "@mocks/*": ["src/mocks/*"],
      "@canvas/*": ["src/canvas/*"],
      "@domain/*": ["src/types/*"],
      "@config/*": ["src/config/*"],
      "@hooks/*": ["src/hooks/*"],
      "@services/*": ["src/services/*"],
      "@lib/*": ["src/lib/*"],
      "@providers/*": ["src/providers/*"],
      "@boot/*": ["src/boot/*"]
    },
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
